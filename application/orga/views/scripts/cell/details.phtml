    <h1><?=$this->pageTitle?></h1>
</div>

<div class="row-fluid">

    <? if ($this->displayNavigationPanel !== false) : ?>
        <div class="well span" id="navigationPanel">
            <?= $this->partial('cell/navigation.phtml',
                ['cell' => $this->cell, 'isParentCellReachable' => $this->isParentCellReachable])?>
        </div>
        <div id="navigationClose" class="span well opened" title="<?=__('Orga', 'navigation', 'seeOrganization')?>">
            <i class="icon-minus"></i>
        </div>
    <? endif; ?>

    <div id="navigationContent" class="span">
        <?php
        $this->tabView->display();
        ?>
    </div>

</div>

<script type="text/javascript">
    $('#navigationClose').click(function () {
        var navigationPanel = $('#navigationPanel');
        if (navigationPanel.css('display') == 'none') {
            $(this).removeClass('closed').addClass('opened');
            $(this).find('i').removeClass('icon-plus').addClass('icon-minus');
        } else {
            $(this).addClass('closed').removeClass('opened');
            $(this).find('i').removeClass('icon-minus').addClass('icon-plus');
        }
        navigationPanel.animate({width: "toggle"}, 50);
    });
    $('#navigationClose').trigger('click');
</script>
