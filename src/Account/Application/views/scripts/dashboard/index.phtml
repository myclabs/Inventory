<style>
    .deleteOrganization { margin-left: 15px; }
</style>

<div class="page-header">
    <h1>
        <?=$account->name?>
        <small>Dashboard</small>
    </h1>
</div>

<p>
    <label>
        Changer de compte :
        <select id="accountSwitcher">
            <?php foreach ($accountList as $alternativeAccount) : ?>
                <?php
                $selected = $alternativeAccount->getId() == $account->id ? 'selected' : '';
                ?>
                <option value="<?=$alternativeAccount->getId()?>" <?=$selected?>>
                    <?=$alternativeAccount->getName()?>
                </option>
            <?php endforeach; ?>
        </select>
