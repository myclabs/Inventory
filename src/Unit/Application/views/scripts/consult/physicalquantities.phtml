    $datagrid = new UI_Datagrid ('ListPhysicalQuantity', 'datagrids_physicalquantities', 'unit');

    $nameColumn = new UI_Datagrid_Col_Text('name', __('UI', 'name', 'label'));
    $datagrid->addCol($nameColumn);

    // $refColumn = new UI_Datagrid_Col_Text('ref', __('UI', 'name', 'identifier'));
