<?php
use AF\Domain\AF;

/**
 * Vue qui permet d'afficher le formulaire
 * @package AF
 */

/** @var $af \AF\Domain\AF */
$af = $this->af;

// Formulaire d'Ã©dition
$form = new UI_Form('generalForm');
$form->setAction($this->baseUrl('af/edit/general-submit'));

$idField = new UI_Form_Element_Hidden('id');
$idField->setValue($af->getId());
$form->addElement($idField);

$labelField = new UI_Form_Element_Text('label');
$labelField->setLabel(__('UI', 'name', 'label'));
$labelField->setValue($af->getLabel());
$form->addElement($labelField);

$refField = new UI_Form_Element_Text('ref');
$refField->setLabel(__('UI', 'name', 'identifier'));
$refField->setValue($af->getRef());
$form->addElement($refField);

$documentationField = new UI_Form_Element_Textarea('documentation');
$documentationField->setLabel(__('UI', 'name', 'documentation'));
$documentationField->setValue($af->getDocumentation());
$form->addElement($documentationField);

$form->addSubmitButton();
echo $form->render();
?>

