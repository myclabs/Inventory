    $datagrid = new UI_Datagrid('keywords', 'datagrid_keyword', 'keyword');

    $columnLabel = new UI_Datagrid_Col_Text('label', __('UI', 'name', 'label'));
    $columnLabel->sortName = KeywordRepository::QUERY_LABEL;
    $columnLabel->filterName = KeywordRepository::QUERY_LABEL;

    $columnRef = new UI_Datagrid_Col_Text('ref', __('UI', 'name', 'identifier'));
    $columnRef->sortName = KeywordRepository::QUERY_REF;
    $columnRef->filterName = KeywordRepository::QUERY_REF;

