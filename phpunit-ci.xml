<?xml version="1.0" encoding="utf-8"?>
<phpunit colors="false"
         backupGlobals="false"
         bootstrap="./tests/init.php">

    <testsuites>

        <testsuite name="Inventory without Unit">
            <directory>./tests/Mapping</directory>
            <directory>./tests/Core</directory>
            <directory>./tests/User</directory>
            <directory>./tests/Calc</directory>
            <directory>./tests/TEC</directory>
            <directory>./tests/Exec</directory>
            <directory>./tests/Classif</directory>
            <directory>./tests/Keyword</directory>
            <directory>./tests/Export</directory>
            <directory>./tests/Techno</directory>
            <directory>./tests/Algo</directory>
            <directory>./tests/AF</directory>
            <directory>./tests/Social</directory>
            <directory>./tests/Orga</directory>
            <directory>./tests/Simulation</directory>
            <directory>./tests/AuditTrail</directory>
            <exclude>./tests/Unit</exclude>
        </testsuite>

    </testsuites>

    <logging>
        <log type="coverage-html" target="data/logs/coverage" title="Inventory"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="data/logs/clover.xml"/>
        <log type="junit" target="data/logs/junit.xml"
             logIncompleteSkipped="false"/>
    </logging>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <directory suffix=".php">application</directory>
            <exclude>
                <file>application/Bootstrap.php</file>
                <directory suffix=".php">application/controllers</directory>
                <directory suffix=".php">application/models</directory>
                <directory suffix=".php">application/plugins</directory>
                <!-- AF -->
                <directory suffix=".php">application/af/controllers</directory>
                <directory suffix=".php">application/af/forms</directory>
                <directory suffix=".php">application/af/views</directory>
                <!-- AuditTrail -->
                <directory suffix=".php">src/AuditTrail/Application/Controller</directory>
                <directory suffix=".php">src/AuditTrail/Application/views</directory>
                <file>src/AuditTrail/Application/Bootstrap.php</file>
                <!-- Classif -->
                <directory suffix=".php">application/classif/controllers</directory>
                <!-- Doc -->
                <directory suffix=".php">application/classif/controllers</directory>
                <!-- DW -->
                <directory suffix=".php">application/dw/controllers</directory>
                <directory suffix=".php">application/dw/forms</directory>
                <!-- Keyword -->
                <directory suffix=".php">application/keyword/controllers</directory>
                <!-- Orga -->
                <directory suffix=".php">application/keyword/controllers</directory>
                <file>application/orga/Bootstrap.php</file>
                <!-- Simulation -->
                <directory suffix=".php">application/simulation/controllers</directory>
                <!-- Simulation -->
                <directory suffix=".php">application/social/controllers</directory>
                <!-- TEC -->
                <directory suffix=".php">application/tec/controllers</directory>
                <!-- Techno -->
                <directory suffix=".php">application/techno/controllers</directory>
                <directory suffix=".php">application/techno/forms</directory>
                <!-- Unit -->
                <directory suffix=".php">application/unit/controllers</directory>
                <file>application/unit/Bootstrap.php</file>
                <!-- User -->
                <directory suffix=".php">application/user/controllers</directory>
                <directory suffix=".php">application/user/forms</directory>
                <directory suffix=".php">application/user/plugins</directory>
                <file>application/user/Bootstrap.php</file>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
